<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>
    
    <script>
    var scale
    var r
    var g
    var b
    var opacity
        function setup() {
            createCanvas(800,600);
            r= random(1,255)
            g= random(1,255)
            b= random(1,255)
            background(r,g,b);
            scale=1
            opacity=255
           
            
        }
        function mouseMoved(){
        r=random(1,255)
        g=random(1,255)
        b=random(1,255)
        }
        function draw() {
        strokeWeight(0.5)
        fill(r-20,g-20,b-20,opacity)    
        ellipse(mouseX-40,mouseY-40,75*scale,75*scale)
        ellipse(mouseX+40,mouseY-40,75*scale,75*scale)
        ellipse(mouseX,mouseY,100*scale,100*scale)
        opacity--;
        }
        function mousePressed(){
          background(r,g,b)
          opacity=255
        }
        
        
       
       function keyPressed(){
           
       }
        
    </script>
</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/matthewr4297/p5js/blob/master/FILENAME.html?footer=0"></script>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>

